<mvc:View controllerName="moovi.m08a02.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.f">
    <Page id="page" title="{i18n>title}" >
        <content>
        
            	<f:GridList
			id="gridList"
			headerText="{i18n>company_list_header_txt}"
			items="{/ScarrSet}">
			<f:GridListItem class="myCustomTileSize">
				<VBox class="sapUiSmallMargin">
					<layoutData>
						<FlexItemData growFactor="1" shrinkFactor="0" /> 
					</layoutData>

					<Title text="{Carrname}" wrapping="true" class="myCustomTitle" />
					<Label text="{Carrid}" wrapping="true" />
				</VBox>
			</f:GridListItem>
		</f:GridList>
        </content>           
        
    </Page>
</mvc:View>
